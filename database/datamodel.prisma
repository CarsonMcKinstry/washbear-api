type User {
  avatar: String
  email: String @unique
  id: ID! @unique
  name: String!
  password: String
  facebookId: String @unique
  bookmarks: [Bookmark!]!
  posts: [Post!]!
}

type Geolocation {
  lat: Float!
  long: Float!
}

type Bookmark {
  user: User!
  post: Post!
}

type Post {
  id: ID! @unique
  postedBy: User!
  title: String!
  title_normalized: String!
  createdAt: DateTime!
  updatedAt: DateTime!
  startsAt: DateTime!
  endsAt: DateTime!
  geolocation: Geolocation
  bookmarks: [Bookmark!]!
  photos: [Photo!]!
  tags: [Tag!]!
}

type Tag {
  name: String!
}

type Photo {
  url: String!
  postedBy: User!
  post: Post!
  title: String
  description: String
  price: Int
  currency: CurrencyEnum
}

enum CurrencyEnum {
  USD
  EUR
  CAD
  GBP
  AUD
}

